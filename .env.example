# =====================================================
# 민원AI (CivicAid) Environment Variables
# =====================================================
# 이 파일을 .env.local로 복사한 후 실제 값을 입력하세요
# cp .env.example .env.local

# =====================================================
# Database (Supabase)
# =====================================================
# Supabase 프로젝트에서 Settings > Database > Connection string에서 찾을 수 있습니다
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Supabase 프로젝트 URL과 API 키
NEXT_PUBLIC_SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="[YOUR-ANON-KEY]"
SUPABASE_SERVICE_ROLE_KEY="[YOUR-SERVICE-ROLE-KEY]"

# =====================================================
# Authentication (Clerk)
# =====================================================
# Clerk 대시보드에서 API Keys 섹션에서 찾을 수 있습니다
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_[YOUR-KEY]"
CLERK_SECRET_KEY="sk_test_[YOUR-KEY]"
CLERK_WEBHOOK_SIGNING_SECRET="[YOUR-WEBHOOK-SECRET]"

# Clerk 리다이렉션 URL
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/auth/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/auth/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# =====================================================
# AI Service (OpenAI)
# =====================================================
# OpenAI API Key
OPENAI_API_KEY="sk-[YOUR-API-KEY]"
OPENAI_ORGANIZATION="org-[YOUR-ORG-ID]"

# =====================================================
# Notification Services
# =====================================================
# SendGrid (이메일)
SENDGRID_API_KEY="SG.[YOUR-API-KEY]"
SENDGRID_FROM_EMAIL="noreply@civicaid.kr"

# =====================================================
# Application URLs
# =====================================================
# 개발 환경
NEXT_PUBLIC_APP_URL="http://localhost:3001"
NEXT_PUBLIC_WWW_URL="http://localhost:3000"

# =====================================================
# Development
# =====================================================
NODE_ENV="development"
NEXT_TELEMETRY_DISABLED="1"
